{
    "name": "litepie/layout",
    "description": "A flexible, component-based layout organizer for Laravel with infinite composition of different section types",
    "keywords": [
        "laravel",
        "layout",
        "components",
        "form",
        "structure",
        "sections",
        "composition",
        "litepie",
        "authorization",
        "grid",
        "flexible",
        "nesting"
    ],
    "homepage": "https://github.com/Litepie/Layout",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Litepie",
            "email": "info@litepie.com",
            "homepage": "https://litepie.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/cache": "^10.0|^11.0|^12.0",
        "illuminate/validation": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0",
        "litepie/form": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "predis/predis": "Required to use Redis cache driver (^2.0)",
        "symfony/yaml": "Required to export/import layouts in YAML format (^6.0|^7.0)"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Layout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Layout\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Layout\\LayoutServiceProvider"
            ],
            "aliases": {
                "Layout": "Litepie\\Layout\\Facades\\Layout"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
